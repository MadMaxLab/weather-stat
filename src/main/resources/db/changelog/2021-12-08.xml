<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="Maxim Bukvich" id="1625486074211-1">
        <createTable tableName="data_streams">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="dataStreamsPK"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
        </createTable>
        <addUniqueConstraint tableName="data_streams" columnNames="name" constraintName="dataStreamUniqueName"/>
        <sql>CREATE INDEX data_streams_name_idx ON data_streams USING hash (name);</sql>
    </changeSet>
</databaseChangeLog>
